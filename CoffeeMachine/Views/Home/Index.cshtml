@model IEnumerable<Menu>

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>

    <div class="card-deck">
        @foreach (var menu in Model)
        {
            <div class="card">
                <img class="card-img-top" src="@menu.Image" alt="@menu.Name Image">
                <div class="card-body">
                    <h5 class="card-title">@menu.Name</h5>
                    <p class="card-text">@menu.Description</p>
                </div>
                <div class="card-footer">
                    <input type="button" class="btn btn-secondary" value="Make me a coffee" onclick="location.href='@Url.Action("Order", new {id = @menu.Id})'"/>
                </div>
            </div>
        }
    </div>

    @if (TempData["Notification"] != null)
    {
        <script type="text/javascript">  
            alert("@TempData["Notification"]")
        </script>
    }
</div>